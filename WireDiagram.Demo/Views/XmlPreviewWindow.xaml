<Window x:Class="WireDiagram.XmlPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xml Preview" Height="600" Width="800" WindowStartupLocation="CenterOwner" SnapsToDevicePixels="True">
    <Grid>
        <TextBox Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 AcceptsReturn="True" 
                 AcceptsTab="True" 
                 BorderBrush="Transparent" 
                 BorderThickness="0"
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto">
        </TextBox>
    </Grid>
</Window>
